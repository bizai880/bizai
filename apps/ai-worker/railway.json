{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/ai-worker/Dockerfile",
    "watchPatterns": ["apps/ai-worker/**", "packages/**"]
  },
  "deploy": {
    "numReplicas": 2,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "startCommand": "node dist/index.js",
    "env": {
      "NODE_ENV": "production",
      "INNGEST_EVENT_KEY": {
        "$ref": "INNGEST_EVENT_KEY"
      },
      "SUPABASE_URL": {
        "$ref": "SUPABASE_URL"
      },
      "SUPABASE_ANON_KEY": {
        "$ref": "SUPABASE_ANON_KEY"
      }
    }
  },
  "healthChecks": {
    "readiness": {
      "type": "tcp",
      "port": 3001,
      "interval": 10,
      "timeout": 5,
      "retries": 3
    },
    "liveness": {
      "type": "http",
      "path": "/health",
      "port": 3001,
      "interval": 30,
      "timeout": 10,
      "retries": 3
    }
  }
}
